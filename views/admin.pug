extends layout

block head-content
    link(rel="stylesheet" href="/style/admin.css")
    //- script(src="/js/rooms.js")

block content
    header(class="header-container")
        h2 Admin Room
        a(href="/")
            button Back to Login
    main(class="history-container")
        table(class="history-table")
            thead
                tr
                    th(id="col-username") Username
                    th(id="col-room") Room
                    th(id="col-message") Message
                    th(id="col-date") Date
            tbody
                each elem in historyList
                    tr(id=`${elem.id}`)
                        td= elem.user
                        td= elem.room.name
                        td= elem.message
                        td= moment(elem.date).format('YYYY-MM-DD HH:mm:ss')

